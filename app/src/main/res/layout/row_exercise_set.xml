<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/setExerciseRepsID"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="12 x"
                android:textColor="@color/colorTextMain"
                android:textSize="24sp"
                app:fontFamily="@font/changa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/setExerciseWeightID"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/setExerciseWeightID"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="30 kg"
                android:textColor="@color/colorTextMain"
                android:textSize="24sp"
                app:fontFamily="@font/changa"
                app:layout_constraintEnd_toStartOf="@+id/setExerciseRestID"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/setExerciseRepsID"
                app:layout_constraintTop_toTopOf="@+id/setExerciseRepsID" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/button_050"
                android:layout_height="@dimen/button_050"
                android:tint="@color/colorTextSecondary"
                app:layout_constraintBottom_toBottomOf="@+id/setExerciseRestID"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/setExerciseRestID"
                app:layout_constraintTop_toTopOf="@+id/setExerciseRestID"
                app:srcCompat="@drawable/ic_uncheck_24dp" />

            <TextView
                android:id="@+id/setExerciseRestID"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="30 s"
                android:textColor="@color/colorTextMain"
                android:textSize="24sp"
                app:fontFamily="@font/changa"
                app:layout_constraintEnd_toStartOf="@+id/imageView4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/setExerciseWeightID"
                app:layout_constraintTop_toTopOf="@+id/setExerciseWeightID" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>