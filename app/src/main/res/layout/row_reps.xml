<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/repsRowRepsID"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="right"
                android:text="12 x"
                android:textAllCaps="false"
                android:textColor="@color/colorTextMain"
                android:textSize="24sp"
                app:fontFamily="@font/changa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/repsRowWeightID"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:gravity="right"
                android:text="10 kg"
                android:textColor="@color/colorTextMain"
                android:textSize="24sp"
                app:fontFamily="@font/changa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/repsRowRepsID" />

            <ImageView
                android:id="@+id/repsRowCheckID"
                android:layout_width="@dimen/button_050"
                android:layout_height="@dimen/button_050"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:tint="@color/colorTextSecondary"
                app:layout_constraintBottom_toBottomOf="@+id/repsRowWeightID"
                app:layout_constraintEnd_toStartOf="@+id/repsRowUncheckID"
                app:layout_constraintTop_toTopOf="@+id/repsRowWeightID"
                app:srcCompat="@drawable/ic_check_24dp" />

            <ImageView
                android:id="@+id/repsRowUncheckID"
                android:layout_width="@dimen/button_050"
                android:layout_height="@dimen/button_050"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:tint="@color/colorTextSecondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/repsRowCheckID"
                app:srcCompat="@drawable/ic_uncheck_24dp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorTextSecondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/repsRowRestID"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="210dp"
                android:layout_marginLeft="210dp"
                android:gravity="right"
                android:text="30 s"
                android:textColor="@color/colorTextMain"
                android:textSize="24sp"
                app:fontFamily="@font/changa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>